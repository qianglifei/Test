<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#6EC5BB"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/oval"
                android:text="2011"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#c9e5e1"
                />

            <View
                android:layout_marginLeft="4dp"
                android:layout_marginTop="24dp"
                android:background="#bddad6"
                android:layout_width="80dp"
                android:layout_height="1dp"/>

            <RadioButton
                android:layout_marginLeft="4dp"
                android:id="@+id/radioButton2"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/oval"
                android:text="2012"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#c9e5e1"
                />

            <View
                android:layout_marginLeft="4dp"
                android:layout_marginTop="24dp"
                android:background="#bddad6"
                android:layout_width="80dp"
                android:layout_height="1dp"/>

            <RadioButton
                android:layout_marginLeft="8dp"
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/oval"
                android:text="2013"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#c9e5e1"
                />

            <View
                android:layout_marginLeft="4dp"
                android:layout_marginTop="24dp"
                android:background="#bddad6"
                android:layout_width="80dp"
                android:layout_height="1dp"/>

            <RadioButton
                android:layout_marginLeft="8dp"
                android:id="@+id/radioButton4"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/oval"
                android:text="2014"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#c9e5e1"
                />

            <View
                android:layout_marginLeft="4dp"
                android:layout_marginTop="24dp"
                android:background="#bddad6"
                android:layout_width="80dp"
                android:layout_height="1dp"/>

            <RadioButton
                android:layout_marginLeft="8dp"
                android:id="@+id/radioButton5"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/oval"
                android:text="2015"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#c9e5e1" />

            <View
                android:layout_marginLeft="4dp"
                android:layout_marginTop="24dp"
                android:background="#bddad6"
                android:layout_width="80dp"
                android:layout_height="1dp"/>

            <RadioButton
                android:layout_marginLeft="8dp"
                android:id="@+id/radioButton6"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/oval"
                android:text="2016"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#c9e5e1" />

            <View
                android:layout_marginLeft="4dp"
                android:layout_marginTop="24dp"
                android:background="#bddad6"
                android:layout_width="80dp"
                android:layout_height="1dp"/>

            <RadioButton
                    android:layout_marginLeft="8dp"
                    android:id="@+id/radioButton7"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableTop="@drawable/oval"
                    android:text="2017"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#c9e5e1" />

        </LinearLayout>

    </HorizontalScrollView>

    <com.beikong.hdunemployedperson.CustomView.PieGraphView
        android:id="@+id/pieGraphView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/colorGreenDeep"
        />

</LinearLayout>