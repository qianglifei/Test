<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RadioButton
        android:id="@+id/radioButton_static"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/bg_radiobutton_static"
        android:text="统计"
        android:gravity="center"
        android:drawablePadding="4dp"

        />
    <RadioButton
        android:drawablePadding="7dp"
        android:id="@+id/radioButton_message"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/bg_radiobutton_message"
        android:text="消息"
        android:gravity="center"
        />
    <RadioButton
        android:id="@+id/radioButton_manage"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/bg_radiobutton_manage"
        android:text="管理"
        android:gravity="center"
        android:drawablePadding="4dp"
        />
    <RadioButton
        android:id="@+id/radioButton_person"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/bg_radiobutton_person"
        android:text="个人"
        android:gravity="center"
        android:drawablePadding="4dp"
        />
</RadioGroup>